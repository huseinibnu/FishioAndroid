<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_gravity="center"
    android:clickable="true">

    <!-- TextView Pertama (Judul) -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="233dp"
        android:layout_height="99dp"
        android:padding="15dp"
        android:text="Ciri-Ciri Ikan Segar"
        android:fontFamily="@font/poppins_medium"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:background="@drawable/nama_bulat"
        android:layout_centerHorizontal="true" />

    <!-- ImageView (Gambar) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/imageView"
        android:layout_width="322dp"
        android:layout_height="250dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="-13dp"
        android:background="@drawable/pop_up_bulat"
        app:cardBackgroundColor="#7CCCDD"
        app:cardCornerRadius="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/foto_ikan"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>


    <!-- TextView Kedua (Deskripsi) -->
    <TextView
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:background="@drawable/nama_bulat"
        android:fontFamily="@font/poppins_medium"
        android:paddingHorizontal="22dp"
        android:paddingVertical="26dp"
        android:text="1. Mata: Berwarna cerah putih dan hitam, bening, tampak menonjol.\n2. Insang: Berwarna merah dan tertutup lendir bening.\n3. Bau: Seperti bau laut.\n4. Sisik: Menempel kuat pada kulitnya.\n5. Daging: Berwarna cerah sesuai dengan jenis ikannya dan padat. "
        android:textColor="@color/white"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />
</RelativeLayout>
