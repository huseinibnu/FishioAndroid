<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">
    <!-- Bagian garis putih atas -->
    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_remove_24"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        android:id="@+id/minimize"/>

    <!-- Bagian beranda -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"
        android:layout_marginTop="7dp"/>

    <LinearLayout
        android:id="@+id/layoutBeranda"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_home_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beranda"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>

    <!-- Bagian mata ikan -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"/>

    <LinearLayout
        android:id="@+id/layoutMata"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_mata_ikan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mata Ikan"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>

    <!-- Bagian mata dan insang ikan -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"/>

    <LinearLayout
        android:id="@+id/layoutMataInsang"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_mata_dan_insang"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mata dan Insang Ikan"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>

    <!-- Bagian insang ikan -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"/>

    <LinearLayout
        android:id="@+id/layoutInsang"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_insang"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insang Ikan"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>

    <!-- Bagian ciri-ciri ikan segar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"/>

    <LinearLayout
        android:id="@+id/layoutCiri"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_ciri"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciri-ciri Ikan Segar"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>

    <!-- Bagian tentang kami -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"/>

    <LinearLayout
        android:id="@+id/layoutAbout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:layout_marginBottom="10dp">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/logo_depresso"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang Kami"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>


</LinearLayout>