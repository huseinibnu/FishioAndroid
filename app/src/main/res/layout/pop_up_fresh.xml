<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="321dp"
        android:layout_height="493dp"
        android:layout_centerInParent="true"
        android:background="@drawable/fresh_bulat">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="77dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="-12sp"
            android:text="HORE, IKANMU \nSEGAR!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            app:lineHeight="33sp" />

        <ImageView
            android:id="@+id/fresh_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/fresh_dian" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="325dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="-12sp"
            android:text="Pastikan tidak berbau busuk, tidak berlendir, dan dagingnya keras"
            android:textAlignment="center"
            android:textColor="#F9F5F6"
            android:textSize="15sp"
            android:textStyle="italic"
            app:lineHeight="22sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="35dp"
            android:background="@drawable/tombol_ok"
            android:fontFamily="@font/poppins_bold"
            android:text="OK"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </FrameLayout>

</RelativeLayout>